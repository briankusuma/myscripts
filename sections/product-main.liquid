{% assign current_variant = product.selected_or_first_available_variant %}
{% assign featured_image = current_variant.featured_image | default: product.featured_image %}

{% comment %} <img src="{{ featured_image | img_url: 'large' }}" alt="{{ featured_image.alt | escape }}" id="ProductPhotoImg"> {% endcomment %}

{% comment %} {% for image in product.images %}
<a href="{{ image.src | img_url: 'large' }}">
    <img src="{{ image.src | img_url: 'compact' }}" alt="{{ image.alt | escape }}">
</a>
{% endfor %}
<h1>{{ product.title }}</h1>
<form action="/cart/add" method="post" enctype="multipart/form-data" id="AddToCartForm">
<select name="id" id="productSelect">
    {% for variant in product.variants %}
    {% if variant.available %}
        <option value="{{ variant.id }}">
        {{ variant.title }} - {{ variant.price | money_with_currency }}
        </option>
    {% else %}
        <option disabled="disabled">
        {{ variant.title }} - sold out procusct main
        </option>
    {% endif %}
    {% endfor %}
</select>
{{ current_variant.price | money }}
<label for="Quantity">quantity</label>
<input type="number" id="Quantity" name="quantity" value="1" min="1">
<button type="submit" name="add" id="AddToCart"> cart</button>
</form>
<div>{{ product.description }}</div> {% endcomment %}

<div class="container">
    <div class="detail-content_wrapper detail-product-page">
        <div class="detail-content_wrapper-text detail-product-page_txt">
            <div class="tag_detail">{{ product.type }}</div>
            <h1 class="detail-display_title">
                {{ product.title }}
            </h1>
            <span class="detail-display_price">{{ product.price | money }}</span>
            <span class="detail-display_paragraft">
                {{ product.description }}
            </span>
            <form class="form-btn_card" method="post" action="/cart/add">
                <input type="hidden" name="id" value="{{ product.variants.first.id }}">
                <button type="submit" class="button btn-primary is-big is-fullwidth">Add to Cart</button>
            </form>
        </div>
        <div class="detail-content_wrapper-image">
            {% for image in product.images %}
            {% comment %} <img class="begin-card_image" src="{{ 'vaccine-bottle1.png' | asset_url }}" alt="Icon" width="500" height="500"> {% endcomment %}
            <img src="{{ featured_image | img_url: 'master' }}" alt="{{ featured_image.alt | escape }}" id="ProductPhotoImg" >
            {% endfor %}
        </div>
    </div>
</div>

<style>
  #ProductPhotoImg {
    max-width: 500px; /* Constrain width to fit original container */
    height: auto;     /* Maintain aspect ratio */
    display: block;   /* Optional: Remove potential extra space below */
    margin: 0 auto;   /* Optional: Center if container allows */
  }
</style>

{% schema %}
    {
        "name": "Hero detail Section",
        "tag": "section",
        "class": "hero-detail section-full"
    }
{% endschema %}