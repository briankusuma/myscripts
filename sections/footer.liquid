{% assign footer_menu = linklists.footer %}
{% assign links = footer_menu.links %}
{% assign total = links.size %}
{% assign group_size = total | divided_by: 2 | ceil %}

<div class="container">
    <div class="footer_layout-menu">
        <div class="footer-menu-list">
            <div class="footer_brand">
                {% if section.settings.logo_brand %}
                <img class="logo-brand" src="{{ section.settings.logo_brand | image_url: width: 150 }}" alt="Logo Brand" width="150" height="30">
            {% else %}
                <img class="logo-brand" src="{{ 'Logo-myscripts.svg' | asset_url }}" alt="Logo Brand" width="150" height="30">
            {% endif %}
            </div>
        </div>
        <div class="footer-menus_wrapper">
        <div class="footer-menu-list">
            {% for group_index in (0..2) %}
            <ul class="list-footer">
                {% assign start = group_index | times: group_size %}
                {% assign sliced_links = links | slice: start, group_size %}
                {% for link in sliced_links %}
                <li><a href="{{ link.url }}">{{ link.title }}</a></li>
                {% endfor %}
            </ul>
            {% endfor %}
        </div>
        
    </div>

    </div>
    <div class="footer_layout-allright">
        <div class="footer_payment">
            {% assign icon_blocks = section.blocks | where: "type", "payment_icon" %}
            {% if icon_blocks.size > 0 %}
                {% for block in icon_blocks %}
                <div class="payment_icon">
                    <img
                    class="begin-card_image"
                    src="{% if block.settings.icon != blank %}
                                {{ block.settings.icon | image_url: width: 38 }}
                            {% else %}
                                {{ 'visa-icon.png' | asset_url }}
                            {% endif %}"
                    alt="{{ block.settings.alt_text | default: 'Icon payment' }}"
                    width="38"
                    height="24">
                </div>
                {% endfor %}
            {% else %}
            <div class="payment_icon">
                <img class="begin-card_image" src="{{ 'visa-icon.png' | asset_url }}" alt="Icon" width="38" height="24">
            </div>
            <div class="payment_icon">
                <img class="begin-card_image" src="{{ 'master-icon.png' | asset_url }}" alt="Icon" width="38" height="24">
            </div>
            <div class="payment_icon">
                <img class="begin-card_image" src="{{ 'o-icon.png' | asset_url }}" alt="Icon" width="38" height="24">
            </div>
            <div class="payment_icon">
                <img class="begin-card_image" src="{{ 'pp-icon.png' | asset_url }}" alt="Icon" width="38" height="24">
            </div>
            <div class="payment_icon">
                <img class="begin-card_image" src="{{ 'dicover-icon.png' | asset_url }}" alt="Icon" width="38" height="24">
            </div>
            <div class="payment_icon">
                <img class="begin-card_image" src="{{ 'AE-icon.png' | asset_url }}" alt="Icon" width="38" height="24">
            </div>
        </div>
    {% endif %}
        <div class="footer-allright">
            <p>{{ section.settings.copyright_text }}</p>
        </div>
    </div>
