<div class="container footer-cont">
  <div class="footer-top">
    <div class="footer-newsletter">
      <div class="footer-newsletter-head">
        <span class="txt-500 fs-16 cl-white">
          {{ section.settings.newsletter_title }}
        </span>
        <p class="txt-400 fs-16 cl-white-60">
          {{ section.settings.newsletter_description }}
        </p>
      </div>
      {% form 'customer', class: 'footer-form'%}
        {% if form.errors %}
          <ul>
            {% for field in form.errors %}
              {% for message in field[1] %}
                <li>{{ message }}</li>
              {% endfor %}
            {% endfor %}
          </ul>
        {% elsif form.posted_successfully? %}
          <p>Thank you for subscribing!</p>
        {% else %}
        <div class="footer-form-input">
          <input 
            type="email" 
            name="contact[email]" 
            id="email" 
            class="newsletter-input" 
            placeholder="Email Address" 
            required 
          />
          <button type="submit" class="newsletter-button">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M14.4297 5.93005L20.4997 12.0001L14.4297 18.0701" stroke="white" stroke-width="1.5" stroke-miterlimit="10" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M3.5 12H20.33" stroke="white" stroke-width="1.5" stroke-miterlimit="10" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </button>
        </div>
        {% endif %}
      {% endform %}
    </div>
    <div class="footer-links">
      <div class="footer-links-list-wrapper">
        <span class="txt-500 fs-16 cl-white">{{ section.settings.group_one_title }}</span>
        <ul class="footer-links-list">
          {% for link in linklists['main-menu'].links %}
            <li class="footer-links-item">
              <a href="{{ link.url }}">{{ link.title }}</a>
            </li>
          {% endfor %}
        </ul>
      </div>
      <div class="footer-links-list-wrapper">
        <span class="txt-500 fs-16 cl-white">{{ section.settings.group_two_title }}</span>
        <li class="footer-links-item">
          <span>{{ section.settings.contact_email }}</span>
          <br>
          <span>{{ section.settings.contact_phone }}</span>
        </li>
      </div>

    </div>
  </div>
  <div class="footer-bottom">
    <img src="https://cdn.shopify.com/s/files/1/0625/6263/1749/files/logo-white.png?v=1731811107" alt="" class="footer-logo">
    <div class="footer-copyright-wrapper">
      {% if localization.available_languages.size > 1 %}
        <localization-form>
          {% form 'localization' %}
            <div class="disclosure language">
              <button type="button" class="disclosure__button language-btn" aria-expanded="false" aria-controls="LanguageList">
