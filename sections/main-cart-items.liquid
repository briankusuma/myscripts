<section class="cart section-full">
    <div class="container">
        <div class="cart-content">
        <div class="cart-head">
            <h1 class="cart-title">You Cart</h1>
        </div>
        {% form 'cart', cart %}
            <div class="cart-content-items">
            {% if cart.empty? %}
                <span class="text-empty">Cart is empty</span>
            {% else %}
                <div class="cart-main">
                    <div class="cart-head">
                        <div class="cart-block-head">
                            <span class="text-product">Product</span>
                        </div>
                        <div class="cart-block-price">
                            <span class="text-price">Price</span>
                        </div>
                        <div class="cart-block-quantity">
                            <span class="text-quantity">Quantity</span>
                        </div>
                        <div class="cart-block-total">
                            <span class="text-total">Total</span>
                        </div>
                        <div class="cart-block-remove">
                            <span class=""></span>
                        </div>
                    </div>

                {% for item in cart.items %}
                <div class="cart-block">
                    <div class="cart-block-title">
                        <img src="{{ item.image | image_url: width: 80 }}" alt="{{ item.product.title }}">
                        <div class="cart-block-title_text">
                            <span class="title">{{ item.product.title }}</span>
                            <span class="number">{{ item.final_price | money }}/month</span>
                        </div>
                    </div>
                    <div class="cart-block-price">
                        <span class="number-price">{{ item.final_price | money }}</span>
                    </div>
                    <div class="cart-block-quantity">
                        <div class="product-quantity">
                        <button type="button" class="decrement" data-key="{{ item.key }}">
                            <svg xmlns="http://www.w3.org/2000/svg" width="17" height="16" viewBox="0 0 17 16" fill="none">
                                <path d="M14.332 8C14.332 8.13261 14.2794 8.25979 14.1856 8.35355C14.0918 8.44732 13.9646 8.5 13.832 8.5H2.83203C2.69942 8.5 2.57225 8.44732 2.47848 8.35355C2.38471 8.25979 2.33203 8.13261 2.33203 8C2.33203 7.86739 2.38471 7.74021 2.47848 7.64645C2.57225 7.55268 2.69942 7.5 2.83203 7.5H13.832C13.9646 7.5 14.0918 7.55268 14.1856 7.64645C14.2794 7.74021 14.332 7.86739 14.332 8Z" fill="#7D8B94"/>
                            </svg>
                        </button>
                        <input class="quantity-input" name="updates[{{ item.key }}]" value="{{ item.quantity }}" min="0">
                        <button type="button" class="increment" data-key="{{ item.key }}">
                            <svg xmlns="http://www.w3.org/2000/svg" width="17" height="16" viewBox="0 0 17 16" fill="none">
                                <path d="M14.332 8C14.332 8.13261 14.2794 8.25979 14.1856 8.35355C14.0918 8.44732 13.9646 8.5 13.832 8.5H8.83203V13.5C8.83203 13.6326 8.77935 13.7598 8.68559 13.8536C8.59182 13.9473 8.46464 14 8.33203 14C8.19942 14 8.07225 13.9473 7.97848 13.8536C7.88471 13.7598 7.83203 13.6326 7.83203 13.5V8.5H2.83203C2.69942 8.5 2.57225 8.44732 2.47848 8.35355C2.38471 8.25979 2.33203 8.13261 2.33203 8C2.33203 7.86739 2.38471 7.74021 2.47848 7.64645C2.57225 7.55268 2.69942 7.5 2.83203 7.5H7.83203V2.5C7.83203 2.36739 7.88471 2.24021 7.97848 2.14645C8.07225 2.05268 8.19942 2 8.33203 2C8.46464 2 8.59182 2.05268 8.68559 2.14645C8.77935 2.24021 8.83203 2.36739 8.83203 2.5V7.5H13.832C13.9646 7.5 14.0918 7.55268 14.1856 7.64645C14.2794 7.74021 14.332 7.86739 14.332 8Z" fill="#7D8B94"/>
                            </svg>
                        </button>
                        </div>
                    </div>
                    <div class="cart-block-total">
                        <p class="number-total">{{ item.final_line_price | money }}</p>
                    </div>
                    <div class="cart-block-remove">
                        <button type="submit" name="updates[{{ item.key }}]" value="0" class="cart-remove">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 16 16" fill="none">
                                <path d="M13.5 3H11.25V2.25C11.25 1.78587 11.0656 1.34075 10.7374 1.01256C10.4092 0.684374 9.96413 0.5 9.5 0.5H6.5C6.03587 0.5 5.59075 0.684374 5.26256 1.01256C4.93437 1.34075 4.75 1.78587 4.75 2.25V3H2.5C2.30109 3 2.11032 3.07902 1.96967 3.21967C1.82902 3.36032 1.75 3.55109 1.75 3.75C1.75 3.94891 1.82902 4.13968 1.96967 4.28033C2.11032 4.42098 2.30109 4.5 2.5 4.5H2.75V13C2.75 13.3315 2.8817 13.6495 3.11612 13.8839C3.35054 14.1183 3.66848 14.25 4 14.25H12C12.3315 14.25 12.6495 14.1183 12.8839 13.8839C13.1183 13.6495 13.25 13.3315 13.25 13V4.5H13.5C13.6989 4.5 13.8897 4.42098 14.0303 4.28033C14.171 4.13968 14.25 3.94891 14.25 3.75C14.25 3.55109 14.171 3.36032 14.0303 3.21967C13.8897 3.07902 13.6989 3 13.5 3ZM6.25 2.25C6.25 2.1837 6.27634 2.12011 6.32322 2.07322C6.37011 2.02634 6.4337 2 6.5 2H9.5C9.5663 2 9.62989 2.02634 9.67678 2.07322C9.72366 2.12011 9.75 2.1837 9.75 2.25V3H6.25V2.25ZM11.75 12.75H4.25V4.5H11.75V12.75ZM7.25 6.5V10.5C7.25 10.6989 7.17098 10.8897 7.03033 11.0303C6.88968 11.171 6.69891 11.25 6.5 11.25C6.30109 11.25 6.11032 11.171 5.96967 11.0303C5.82902 10.8897 5.75 10.6989 5.75 10.5V6.5C5.75 6.30109 5.82902 6.11032 5.96967 5.96967C6.11032 5.82902 6.30109 5.75 6.5 5.75C6.69891 5.75 6.88968 5.82902 7.03033 5.96967C7.17098 6.11032 7.25 6.30109 7.25 6.5ZM10.25 6.5V10.5C10.25 10.6989 10.171 10.8897 10.0303 11.0303C9.88968 11.171 9.69891 11.25 9.5 11.25C9.30109 11.25 9.11032 11.171 8.96967 11.0303C8.82902 10.8897 8.75 10.6989 8.75 10.5V6.5C8.75 6.30109 8.82902 6.11032 8.96967 5.96967C9.11032 5.82902 9.30109 5.75 9.5 5.75C9.69891 5.75 9.88968 5.82902 10.0303 5.96967C10.171 6.11032 10.25 6.30109 10.25 6.5Z" fill="#7D8B94"/>
                            </svg>
                        </button>
                    </div>
                </div>
                {% endfor %}
                </div>

                <div class="cart-summary">
                    <div class="cart-summary-head">
                        <span class="text-summary">Summary</span>
                    </div>
                    <div class="cart-summary-main">
                        <div class="cart-summary-item">
                        <span>Subtotal</span>
                        <span>{{ cart.original_total_price | money }}</span>
                        </div>
                        <div class="cart-summary-item">
                        <span>Discount</span>
                        <span>{{ cart.total_discount | money }}</span>
                        </div>
                        <div class="cart-summary-item">
                        <span>Indicative Total</span>
                        <span>{{ cart.items_subtotal_price | money }}</span>
                        </div>
                        <div class="term_layout">
                            <p class="text-tax">Tax included and shipping calculated at checkout</p>
                            <div class="checkbox-layout">
                                <input type="checkbox" id="term-codition" name="term-codition" value="term-codition">
                                <label for="term-codition">
                                    <p class="text-term">I agree with <a class="term-link" href="/term">Terms & Conditions</a></p>
                                </label>
                            </div>
                            
                        </div>
                    </div>
                    <div class="cart-button">
                        <button type="submit" name="checkout" class="button is-small btn-primary">Proceed to checkout</button>
                        <button type="submit" class="button is-small btn-primary">Update Cart</button>
                        <a href="/collections" class="button is-small btn-outline">Continue Shopping</a>
                    </div>
                </div>
            {% endif %}
            </div>
        {% endform %}
        </div>
    </div>
</section>

<script src="{{ "cart.js" | asset_url }}"></script>


