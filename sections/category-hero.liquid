<div class="container">
    <div class="product-category-content_wrapper">
        <div class="product-category-content_wrapper-text">

            <h1 class="product-category-display_title">
                {{ section.settings.heading_line | default: "Treatments," }}
                <br>
                <span>{{ section.settings.heading_span | default: "Proven by Research" }}</span>
            </h1>

            <p class="product-category-display_paragraft">
            {{ section.settings.paragraph | default: "Get customized online solutions to help you live a longer, healthier life." }}
            </p>
        <div class="product-category-display_button-wrapper show-button">
            <a href="{{ section.settings.url_page }}" class="button btn-primary is-big">Get Sarted
