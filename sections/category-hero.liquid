        </div>
        </div>
    </div>
</div>
<style>
    .show-button{
        display: {{ section.settings.show_button }}!important;
    }
</style>

{% schema %}
{
    "name": "Category hero Section",
    "tag": "section",
    "class": "category-hero section-full",
    "settings": [
        {
        "type": "text",
        "id": "heading_line",
        "label": "Heading Line",
        "default": "Treatments,"
        },
        {
        "type": "text",
        "id": "heading_span",
        "label": "Heading Highlight (in span)",
        "default": "Proven by Research"
        },
        {
        "type": "textarea",
        "id": "paragraph",
        "label": "Paragraph",
        "default": "Get customized online solutions to help you live a longer, healthier life."
        },
        {
            "type": "select",
            "id": "show_button",
            "label": "button header",
            "options": [
                { "value": "block", "label": "Show" },
                { "value": "none", "label": "Hide" }
            ],
            "default": "none"
        },
        {
            "type": "url",
            "id": "url_page",
            "label": "Link to page"
        }
    ]
}
{% endschema %}