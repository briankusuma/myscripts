
<div class="container">
    <div class="cta-content">
        <div class="cta-content_text">
            <h1 class="cta-content_text-title">{{ section.settings.title }}</h1>
            <p class="cta-content_text-dsc">{{ section.settings.description }}</p>
            <a href="{{ section.settings.url_page }}" class="button btn-primary is-big">{{ section.settings.button_text }}
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 16 16" fill="none">
                    <path d="M11.354 8.35375L6.35403 13.3538C6.30757 13.4002 6.25242 13.4371 6.19173 13.4622C6.13103 13.4873 6.06598 13.5003 6.00028 13.5003C5.93458 13.5003 5.86953 13.4873 5.80883 13.4622C5.74813 13.4371 5.69298 13.4002 5.64653 13.3538C5.60007 13.3073 5.56322 13.2521 5.53808 13.1915C5.51294 13.1308 5.5 13.0657 5.5 13C5.5 12.9343 5.51294 12.8693 5.53808 12.8086C5.56322 12.7479 5.60007 12.6927 5.64653 12.6463L10.2934 8L5.64653 3.35375C5.55271 3.25993 5.5 3.13269 5.5 3C5.5 2.86732 5.55271 2.74007 5.64653 2.64625C5.74035 2.55243 5.8676 2.49973 6.00028 2.49973C6.13296 2.49973 6.26021 2.55243 6.35403 2.64625L11.354 7.64625C11.4005 7.69269 11.4374 7.74783 11.4626 7.80853C11.4877 7.86923 11.5007 7.9343 11.5007 8C11.5007 8.06571 11.4877 8.13077 11.4626 8.19147C11.4374 8.25217 11.4005 8.30732 11.354 8.35375Z" fill="white"/>
                </svg>
            </a>
        </div>
        <div class="cta-content_image">
            {% if section.blocks != blank %}
                <img class="cta-content_images" src="{{ section.settings.image | asset_url }}" alt="Image" width="640" height="498">
            {% else %}
                <img class="cta-content_images" src="{{ 'weight-loss.png' | asset_url }}" alt="image" width="640" height="498">
            {% endif %}
        </div>
    </div>
</div>

{% schema %}
{
    "name": "Cta Section",
    "tag": "section",
    "class": "cta section-full",
    "settings": [
        {
            "type": "text",
            "label": "Section Title",
            "id": "title",
            "default": "Easy Online Care. Medication Delivered."
        },
        {
            "type": "textarea",
            "label": "Section Description",
            "id": "description",
            "default": "Consult with licensed providers online. Receive prescribed treatments discreetly at your home address."
        },
        {
            "type": "text",
            "label": "Button Text",
            "id": "button_text",
            "default": "Get Started"
        },
        {
            "type": "url",
            "id": "url_page",
            "label": "Link to Page"
        },
        {
            "type": "image_picker",
            "label": "Default Image",
            "id": "image"
        }
    ],
    "presets": [
        {
            "name": "Cta section"
        }
    ]
}
{% endschema %}
