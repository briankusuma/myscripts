<div class="navbar-overlay">
{% if template == "index" %}
  <div class="dropdown-left dropdown-transparent">
{% else %}
  <div class="dropdown-left">
{% endif %}
    <ul class="dropdown-left-list">
      {% for link in linklists['shop-categories-menu'].links %}
        <li class="dropdown-left-item">
          <a href="{{ link.url }}">{{ link.title }}</a>
        </li>
      {% endfor %}
    </ul>
    <a href="{{ link.url }}" class="dropdown-left-link-last">{{ link.title }}</a>
  </div>
  <div class="dropdown-right">
    <form action="{{ routes.search_url }}" class="nav-search-wrapper">
      <input type="text"
        placeholder="Search"
        name="q"
        value="{{ search.terms | escape }}"
      >
      <button class="btn-nav-cancel">Cancel</button>
    {% comment %} <input type="submit" value="Search"> {% endcomment %}
    </form>
    <div class="dropdown-right-main">
      <div class="dropdown-right-list-wrapper">
        <span class="dropdown-right-list-title">Trending Searches</span>
        <ul class="dropdown-right-list">
          {% for link in linklists['search-menu-1'].links %}
            <li class="dropdown-right-list-item">
              <svg width="14" height="15" viewBox="0 0 14 15" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M6.70866 12.7501C9.76924 12.7501 12.2503 10.269 12.2503 7.20842C12.2503 4.14784 9.76924 1.66675 6.70866 1.66675C3.64808 1.66675 1.16699 4.14784 1.16699 7.20842C1.16699 10.269 3.64808 12.7501 6.70866 12.7501Z" stroke="#111111" stroke-width="0.875" stroke-linecap="round" stroke-linejoin="round"/>
              <path d="M12.8337 13.3334L11.667 12.1667" stroke="#111111" stroke-width="0.875" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
              <a href="{{ link.url }}">{{ link.title }}</a>
            </li>
          {% endfor %}
        </ul>
      </div>
      <div class="dropdown-right-list-wrapper">
        <span class="dropdown-right-list-title">Latest New</span>
        <ul class="dropdown-right-list">
          {% for link in linklists['search-menu-1'].links %}
            <li class="dropdown-right-list-item">
              <svg width="14" height="15" viewBox="0 0 14 15" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M6.70866 12.7501C9.76924 12.7501 12.2503 10.269 12.2503 7.20842C12.2503 4.14784 9.76924 1.66675 6.70866 1.66675C3.64808 1.66675 1.16699 4.14784 1.16699 7.20842C1.16699 10.269 3.64808 12.7501 6.70866 12.7501Z" stroke="#111111" stroke-width="0.875" stroke-linecap="round" stroke-linejoin="round"/>
              <path d="M12.8337 13.3334L11.667 12.1667" stroke="#111111" stroke-width="0.875" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
              <a href="{{ link.url }}">{{ link.title }}</a>
            </li>
          {% endfor %}
        </ul>
      </div>
    </div>
  </div>
  <div class="navbar-mobile" id="nav-menu-mobile">
      <div class="navbar-mobile-head">

        <button class="navbar-mobile-close" id="nav-menu-close">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M19 6.41L17.59 5L12 10.59L6.41 5L5 6.41L10.59 12L5 17.59L6.41 19L12 13.41L17.59 19L19 17.59L13.41 12L19 6.41Z" fill="#111111"/>
          </svg>
        </button>
        <button class="navbar-mobile-account">
          {% if customer %}
            <a href="/account">
              <svg width="21" height="21" viewBox="0 0 21 21" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M10.4997 10.5001C12.8009 10.5001 14.6663 8.6346 14.6663 6.33342C14.6663 4.03223 12.8009 2.16675 10.4997 2.16675C8.19849 2.16675 6.33301 4.03223 6.33301 6.33342C6.33301 8.6346 8.19849 10.5001 10.4997 10.5001Z" stroke="currentColor" stroke-width="1.25" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M17.6585 18.8333C17.6585 15.6083 14.4501 13 10.5001 13C6.55013 13 3.3418 15.6083 3.3418 18.8333" stroke="currentColor" stroke-width="1.25" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </a>
          {% else %}
            <a href="/account/login">
              <svg width="21" height="21" viewBox="0 0 21 21" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M10.4997 10.5001C12.8009 10.5001 14.6663 8.6346 14.6663 6.33342C14.6663 4.03223 12.8009 2.16675 10.4997 2.16675C8.19849 2.16675 6.33301 4.03223 6.33301 6.33342C6.33301 8.6346 8.19849 10.5001 10.4997 10.5001Z" stroke="currentColor" stroke-width="1.25" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M17.6585 18.8333C17.6585 15.6083 14.4501 13 10.5001 13C6.55013 13 3.3418 15.6083 3.3418 18.8333" stroke="currentColor" stroke-width="1.25" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </a>
          {% endif %}
        </button>

      </div>
      <div class="navbar-mobile-main">
          <ul class="navbar-mobile-menu">
            <li class="navbar-mobile-item">
              <div class="navbar-mobile-dropdown">
                <span>Shop</span>
                <svg width="14" height="15" viewBox="0 0 14 15" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M11.6199 5.7207L7.81655 9.52404C7.36738 9.9732 6.63238 9.9732 6.18322 9.52404L2.37988 5.7207" stroke="#111111" stroke-width="0.875" stroke-miterlimit="10" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </div>
              <ul class="navbar-mobile-sublist">
                {% for link in linklists['shop-categories-menu'].links %}
                  <li class="navbar-mobile-subitem">
                    <a href="{{ link.url }}">{{ link.title }}</a>
                  </li>
                {% endfor %}
              </ul>
            </li>
            {% for link in linklists['main-menu'].links %}
              <li class="navbar-mobile-item">
                <a href="{{ link.url }}">{{ link.title }}</a>
              </li>
            {% endfor %}
          </ul>
      </div>
    </div>
</div>
